<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sign_up_screen"
    tools:context="android.finaspellapp.SignUpScreen"
    android:background="@drawable/gradient_bg_color">

    <TextView android:id="@+id/tvSteller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="35%"
        app:layout_marginTopPercent="15%"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="STELLER"/>

    <TextView android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvSteller"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="25%"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:textSize="15sp"
        android:text="Tell the story to everyone"/>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="40%"
        app:layout_marginTopPercent="30%"
        app:layout_marginLeftPercent="20%"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="50%"
            android:hint="Name"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_below="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:hint="Surname"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_below="@+id/etSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:hint="Username"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_below="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            app:layout_heightPercent="50%"
            android:hint="Password"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_below="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="50%"
            app:layout_marginTopPercent="20%"
            android:hint="Confirm Password"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF" />



    </LinearLayout>



    <Button
        android:id="@+id/bRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="-55%"
        app:layout_marginLeftPercent="20%"
        android:text="Sign Up"
        android:background="@drawable/gradient_buttons_bg_color"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true" />

</android.support.percent.PercentRelativeLayout>
