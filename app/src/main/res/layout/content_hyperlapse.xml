<?xml version="1.0" encoding="utf-8"?>
<!--  The Percent Relative Layout for holding two images  -->
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <!--  Two image views the first for displaying the Instagram logo and the second for displaying the word of the logo -->

    <ImageView
        android:id="@+id/imgIcon1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_marginTopPercent="30%"
        app:layout_marginLeftPercent="18%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="34%"
        app:layout_widthPercent="65%"
        android:background="@drawable/icon3"/>

    <ImageView
        android:id="@+id/imgIcon2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="70%"
        app:layout_marginTopPercent="8%"
        app:layout_marginLeftPercent="15%"
        android:background="@drawable/icon4"
        android:layout_below="@+id/imgIcon1"/>



</android.support.percent.PercentRelativeLayout>


